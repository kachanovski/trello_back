{
  "openapi": "3.0.0",
  "info": {
    "title": "Trello Clone API",
    "version": "v1",
    "description": "test"
  },
  "servers": [
    {
      "url": "https://trello-app-clone.herokuapp.com/"
    },
    {
      "url": "http://localhost:5000/"
    }
  ],
  "tags": [
    {
      "name": "auth"
    },
    {
      "name": "tasks"
    }
  ],


  "paths": {
    "/auth/login": {
      "post": {
        "summary": "login",
        "tags": [
          "auth"
        ],
        "parameters": [
          {
            "name": "data",
            "in": "header",
            "required": true,
            "description": "data gor login",
            "schema": {
              "type": "object",
              "example": {
                "email": "string",
                "userName": "string",
                "rememberMe": false
              }
            }
          }
        ],
        "description": "Parameters",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "object",
                  "example": {
                    "email": "string",
                    "userName": "string || ===email"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "register",
        "tags": [
          "auth"
        ],
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "required": true,
            "description": "data for register",
            "schema": {
              "example": {
                  "email": "string",
                  "password": "string"
              }
            }
          }
        ],
        "description": "Parameters",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "string",
                  "example": "user created"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "userName": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "required": ["*"],
            "uniqueItems": true
          },
          "password": {
            "type": "string",
            "required": ["*"]
          },
          "rememberMe": {
            "type": "boolean",
            "required": ["*"]
          },
          "teams": {
            "type": "array"
          },
          "boards": {
            "type": "array"
          },
          "verified": {
            "type": "boolean",
            "required": ["*"]
          },
          "avatar": {
            "type": "string"
          },
          "token":{
            "type": "string"
          },
          "tokenDeathTime":{
            "type": "number"
          },
          "resetPasswordToken":{
            "type": "string"
          },
          "resetPasswordTokenDeathTime":{
            "type": "number"
          }
        }
      },
      "Board": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "required": ["*"],
            "uniqueItems": true
          }

        }
      }
    }
  }
}